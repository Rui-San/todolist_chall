{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    
    /* Node.js Standard Configuration */
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    
    /* Strictness & Style */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Typegoose Requirements */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}